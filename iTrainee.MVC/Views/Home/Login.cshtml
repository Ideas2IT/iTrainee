@{
    ViewData["Title"] = "Login Page";
}

<div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-xl-9">
            <div class="card rounded-3 text-black">
                <div class="row g-0">
                    <div class="col-lg-5 d-flex align-items-center gradient-custom-2">
                        <div class="text-white p-md-3 mx-md-3">
                            <h4 class="font-weight-bold mb-4">About Ideas2IT</h4>
                            <p class="big mb-0">
                                We're still growing. Our Data Science practice is over 30 strong, our Blockchain practice is over 15 strong, and our projects just get better and better. We're excited for the future!
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-7 d-flex align-items-center">
                        <div class="card-body p-4 p-lg-5 text-black">
                            <form>
                                <div class="d-flex align-items-center mb-3 pb-1">
                                    <div>
                                        <img src="\css\logo.jpg" width="100" height="100" class="d-inline-block align-top" alt=""> &nbsp;
                                        <span class="text-align-centre font-weight-bolder fs-6 login-app-name">iTrainee</span>
                                    </div>
                                </div>

                                <h5 class="font-weight-bold text-muted pt-4 mb-3 pb-3" style="letter-spacing: 1px;">Sign into your account</h5>

                                <div class="form-outline mb-4">
                                    <label class="form-label" for="form2Example17">Email address</label>
                                    <input type="email" id="form2Example17" class="form-control form-control-lg" />
                                </div>

                                <div class="form-outline mb-4">
                                    <label class="form-label" for="form2Example27">Password</label>
                                    <input type="password" id="form2Example27" class="form-control form-control-lg" />
                                </div>

                                <div class="pt-1 mb-4">
                                    <button class="btn text-white gradient-custom-2 btn-lg btn-block" type="button">Login</button>
                                </div>

                                <a class="big text-muted text-decoration-none" href="#!">Forgot password?</a>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
