@model iTrainee.Models.User
       <form id="myForm">
       <div class="form-group">

        @if(Model.Id == 0)
                {
                    <input type="hidden" class="form-control" name="Id" id="id" value = "@Model.Id">

                }
                else
                {
                  <input type="text" class="form-control" name="Id" id="id" value = "@Model.Id" readonly>

                }
            </div>

                    <div class="form-group">
                        <input type="hidden" class="form-control" name="Id" id="id" value = "@Model.Id" readonly>
                    </div>
                    <div class="form-group">
                        <label class="col-form-label">FirstName</label>
                        <input type="text" class="form-control" name="FirstName" value = "@Model.FirstName" id="first-name" />
                    </div>
                    <div class="form-group">
                        <label class="col-form-label">LastName</label>
                        <input type="text" class="form-control" name="LastName" value = "@Model.LastName" id="last-name" />
                    </div>
                    <div class="form-group">
                        <label class="col-form-lab el">Date Of Birth</label>
                        <input type="date" class="form-control" name="DateOfBirth" value = "@Model.DOB" id="date-of-birth" />
                    </div>
                    <div class="form-group">
                        <label class="col-form-label">Qualification</label>
                        <input type="text" class="form-control" name="Qualification" value = "@Model.Qualification"  id="qualification" />
                    </div>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <input type="submit" class="btn btn-success" value="Save" name="submit" id="btnSubmit" />
                </form>

                @section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}

                <script>
        $(document).ready(function () {

        $("#btnSubmit").click(function () {
            var a = $("#myForm").serialize();
            $.ajax({
                type: "POST",
                url: "/Admin/Home/SaveUser",
                data: a,
                success: function () {
                    $("#myModal1").modal("hide");
                },
                error: function () {
                    alert("Unable to save/update data");
                },
            });
        });
    });
</script>
