@model IEnumerable<iTrainee.Models.Batch>

@{
    ViewData["Title"] = "Mentor";
}
<link rel="stylesheet" href="/css/user.css">

<head>
	<style>

		.admin-dashboard-container {
			margin: auto;
			width: 90%;
		}

        .card {
            border-top: 3px solid rgb(0,35,155);
        }

			/*		.admin-dashboard-row {
					padding-top: 50px;
				}*/

			.card:hover {
				background-color: #F1F3F4;
				border-radius: 8px;
				box-shadow: rgba(0, 79, 255, 0.3) 0 15px 30px -5px;
				cursor: default;
				transform: translateY(-6px);
				transition: transform 700ms cubic-bezier(.3, .7, .4, 1.5);
			}

		.btn:hover {
			background-image: linear-gradient(144deg,#009ffd, rgb(0,35,155) 50%);
			box-shadow: rgba(0, 79, 255, 0.3) 0 15px 30px -5px;
			color: #FFFFFF;
			cursor: pointer;
			transform: translateY(-6px);
			transition: transform 700ms cubic-bezier(.3, .7, .4, 1.5);
		}

		.dashboard-heading{
    margin-left: 40px;
}

.dashboard-heading:hover {
	cursor:default
}
	</style>
</head>

<div class="d-flex justify-content-between mt-4">
	<h4 class="font-weight-bold dashboard-heading">Hello @TempData["UserFirstName"],</h4>
	<a href="/Shared/Batch/ManageBatch?userId=@TempData["UserId"]" class="btn btn-primary btn-add-gradient float-right mb-3"> Manage Batches</a>
</div>


<div class="admin-dashboard-container">
	<div class="row row-cols-1 row-cols-md-2 g-lg-5">

		@foreach (var item in Model)
		{
			<div class="col-2.5">
				<div class="card mt-1">
					<div class="card-body">
						<h3 class="card-title mb-5">@item.Name</h3>
						<div class="d-flex mt-1 mb-1">
							<h5>No of trainees:</h5>
							<p class="ml-3">@item.SelectedTraineeIds.Count()</p>
						</div>
						<div class="d-flex mt-1 mb-1">
							<h5>Since:</h5>
							<p class="ml-3">@item.InsertedOn.ToShortDateString()</p>
						</div>

					</div>
				</div>
			</div>
		}

	</div>
</div>



