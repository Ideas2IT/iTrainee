@model IEnumerable<iTrainee.Models.Stream>

@{
    ViewData["Title"] = "ManageStreams";
}

<style>
    			    .delete-icon {
        color: red;
        font-size: x-large;
    }

    .edit-icon {
        color: #00239B;
        font-size: x-large;
    }
    .btn-add-gradient {
        background-image: linear-gradient(144deg,#009ffd, rgb(0,35,155) 50%);
        border-radius: 4px;
        box-shadow: rgba(0, 79, 255, 0.3) 0 15px 30px -5px;
        color: #FFFFFF;
        cursor: pointer;
        transform: translateY(-6px);
        transition: transform 700ms cubic-bezier(.3, .7, .4, 1.5);
    }
</style>

<div class="d-flex justify-content-between mt-4">
<h3>Manage Streams</h3>
<a href="#" class="btn btn-add-gradient btn-primary float-right mb-3" onclick="AddEditStream(0)"> Add New Stream</a>
</div>

<table class="table table-hover table-bordered">
    <thead>
        <tr class="text-center">
            <th>S.No</th>
            <th class="w-75">Stream</th>
            <th colspan="2">Actions</th>
        </tr>
    </thead>
    <tbody>
        @{
            int Count = 1;
        }
        @foreach (var item in Model)
        {
            <tr>
                <td>@Count</td>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td class="text-center">
					<a href="#" onclick="AddEditStream(@item.Id)"><i class="fa fa-pencil edit-icon"></i></a> 
					</td>
					<td class="text-center">
                        <form id="DeleteStreamForm" method="post">
					<a  href="/Shared/Stream/DeleteStream/@item.Id" ><i class="fa fa-trash delete-icon"></i></a>
                    </form>
				</td>
            </tr>
            Count += 1;
        }
    </tbody>
</table>

<div class="modal fade" id="streamModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title">Save Stream</h3>
            </div>
            <div class="modal-body" id="streamAddEditBody">
            </div>
        </div>
    </div>
</div>



<script type="text/javascript">

    var AddEditStream = function (id) {
        var editStreamData = "/Shared/Stream/AddEditStream?Id=" + id;
        $("#streamAddEditBody").load(editStreamData, function () {
            $("#streamModal").modal("show");
        });
    };

</script>
