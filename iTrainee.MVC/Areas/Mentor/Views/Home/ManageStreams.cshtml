@model IEnumerable<iTrainee.Models.Stream>

@{
	ViewData["Title"] = "ManageStreams";
}



<h1 class="mt-5">Manage Streams</h1>

<p>
	<a href="#" class="btn btn-primary float-right mb-3" onclick="AddEditStream(0)"><i class="glyphicon glyphicon-pencil"></i> Add New Stream</a>
</p>
<table class="table table-hover table-bordered">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Id)
			</th>

			<th>

				@Html.DisplayNameFor(model => model.Name)
			</th>
			<th>
				Actions
			</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Id)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Name)
				</td>

				<td>
					<a href="#" class="btn btn-primary" onclick="AddEditStream(@item.Id)"><i class="glyphicon glyphicon-pencil"></i> Edit</a> |
					<a class="btn btn-outline-primary" href="/Shared/Stream/DeleteStream/@item.Id">Delete</a>
@*  @using (Html.BeginForm("DeleteStream", "Stream", new { id = item.Id, Area="Shared" }))
                {
                    <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete record with ID = @item.Id');"><i class="fa fa-trash"></i> Delete</button>
                }*@
				</td>
			</tr>
		}
	</tbody>
</table>

<div class="modal fade" id="streamModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title">Save Stream</h3>
            </div>
            <div class="modal-body" id="streamAddEditBody">

            </div>
        </div>
    </div>
</div>



<script type="text/javascript">
	
var AddEditStream = function (id) {
    var editStreamData = "/Shared/Stream/AddEditStream?Id=" + id;
    $("#streamAddEditBody").load(editStreamData, function () {
        $("#streamModal").modal("show");
    });
};


</script>
