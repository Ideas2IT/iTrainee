@model iTrainee.Models.Messages;

@{
    ViewData["Title"] = "AddEditMessage";
}

<form method="post" id="alertForm">
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.FromId)

        <div class="form-group">
            <label class="col-form-label">Trainees</label><br />
            @Html.ListBoxFor(model=>model.SelectedTraineeIds,
            new MultiSelectList(Model.TraineeList, "Id", "UserName"),
            htmlAttributes: new { id="multiSelectTrainee", @class = "form-control", multiple="multiple" })
        </div>

        <div class="col-form-outline">
            <label class="col-form-label" for="messageArea">Message</label>
            <textarea class="form-control" id="messageArea" name="Message">@Model.Message</textarea>
        </div>

        <input type="submit" class="mt-3 btn btn-primary" value="Send" />
    </div>
</form>

<script type="text/javascript">
    $(function(){
        $("#multiSelectTrainee").chosen();
    });

</script>
