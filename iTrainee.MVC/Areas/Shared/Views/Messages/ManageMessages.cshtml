@model IEnumerable<iTrainee.Models.Messages>

@{
    ViewData["Title"] = "ManageMessages";
}

<style>
    .delete-icon {
        color: red;
        font-size: x-large;
    }

    .edit-icon {
        color: #00239B;
        font-size: x-large;
    }

    .view-icon {
        font-size: x-large;
    }

    .actions-column {
        width: 100px;
    }

    .alertModalBodyDiv {
        min-height: 480px;
        height: 480px;
        overflow-y: scroll;
    }
</style>

<div class="d-flex justify-content-between mt-4">

    <h3>Messages</h3>
    <a href="/Shared/Messages/AddEditMessages?Id=0" class="btn btn-primary btn-add-gradient float-right mb-3"> Add New Alert</a>
</div>
@*<div class="d-flex justify-content-between mt-4">
    <h3>Messages</h3>
    <a href="#" onclick="AddEditAlert(0)" class="btn btn-primary btn-add-gradient float-right mb-3"> Add New Alert</a>
    <a href="/Shared/Messages/AddEditMessages?Id=0" class="btn btn-primary btn-add-gradient float-right mb-3"> Add New Alert</a>
    </div>*@

<table class="table table-hover table-bordered">
    <thead>
        <tr class="text-center">
            <th>
                @Html.DisplayNameFor(model => model.Message)
            </th>
            <th colspan="3">
                Actions
            </th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Message)
                </td>
                <td class="text-center actions-column">
                    <a href="/Shared/Messages/AddEditMessages?Id=@item.Id"><i class="fa fa-pencil edit-icon"></i></a>
                </td>
                <td class="text-center actions-column">
                    @using (Html.BeginRouteForm(routeName: "Shared",
                   routeValues: new
                   {
                       action = "DeleteMessage",
                       controller = "Messages",
                       area = "Shared",
                       id = item.Id
                   }, FormMethod.Post))
                    {
                        <button class="btn shadow-none" type="submit" onclick="return confirm('Are you sure want to delete this message @item.Message?')">
                            <i class="fa fa-trash delete-icon"></i>
                        </button>
                    }
                    @*<a href="/Shared/Messages/DeleteMessage?Id=@item.Id"><i class="fa fa-trash delete-icon"></i></a>*@
                </td>
                <td class="text-center actions-column">
                    <a href="#" onclick="ViewAlertDetails(@item.Id)"><i class="fa fa-eye view-icon"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="modal fade" id="alertModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title">Alert Response</h3>
                <a href="#" class="close" data-dismiss="modal">&times;</a>                
            </div>
            <div class="modal-body alertModalBodyDiv" id="alertModalBodyDiv">
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">

    function ViewAlertDetails(id) {
        var url = "/Shared/Messages/ViewAlertDetails?Id=" + id;
        $("#alertModalBodyDiv").load(url, function () {
            $("#alertModal").modal("show");
        });
    };

</script>
