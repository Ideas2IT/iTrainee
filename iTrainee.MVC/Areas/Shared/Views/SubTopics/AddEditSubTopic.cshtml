@model iTrainee.Models.SubTopics

<h4>Sub Topics</h4>
<hr />
<div class="row">
	<div class="col-lg-12">
		<form id="subTopicForm" method="post">
			<div class="form-group">
				<label class="col-form-label">Topics</label><br />
				@Html.DropDownListFor(model => model.TopicId, ViewBag.TopicsList as SelectList, "Select Topics",  htmlAttributes: new { @class = "form-control"  })
			</div>
			<div class="form-group">
				<div class="form-group">
					<label class="col-form-label">Name</label>
					<input type="text" class="form-control" name="Name" value="@Model.Name" />
				</div>
			</div>

			<div class="form-group">
				<div class="form-group">
					<label class="col-form-label">Reference URL</label>
					<input type="text" class="form-control" name="ReferenceURL" value="@Model.ReferenceURL" />
				</div>
			</div>
			<div class="form-group mt-4 float-right">
				<input id="btnSubTopicSave" type="submit" value="Save" class="btn btn-primary mr-3" />
			</div>
		</form>
	</div>
</div>
@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
<script>
		$(document).ready(function () {
			debugger
		$("#btnSubTopicSave").click(function () {
			debugger
			var updatedSubTopicData = $("#subTopicForm").serialize();
			$.ajax({
				type: "POST",
				url: "/Shared/SubTopics/AddEditSubTopic",
				data: updatedSubTopicData,
				success: function () {
					$("#subTopicModal").modal("hide");
					//window.location.replace("/Mentor/Home/ManageSubTopics")
				},
				error: function () {
					alert("Unable to save data");
				},
			});
		});
	});
</script>

