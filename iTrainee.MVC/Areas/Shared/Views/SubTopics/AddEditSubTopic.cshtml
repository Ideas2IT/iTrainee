@model iTrainee.Models.SubTopics
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
<h4>Sub Topics</h4>
<hr />
<div class="row">
    <div class="col-lg-12">
        <form id="subTopicForm" method="post">
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label class="col-form-label">Streams</label><br />
                @if (ViewBag.StreamList != null)
                {
                    @Html.DropDownListFor(model => model.StreamId, ViewBag.StreamList as SelectList, "Select stream", htmlAttributes: new {@class = "form-control"  })
                }
            </div>
            <div class="form-group">
                <label class="col-form-label">Topics</label><br />
                @Html.DropDownListFor(model => model.TopicId, ViewBag.TopicsList as SelectList, "Select Topics",  htmlAttributes: new {@class = "form-control"  })
            </div>
            <div class="form-group">
                <div class="form-group">
                    <label class="col-form-label">Name</label>
                    <input type="text" class="form-control" name="Name" value="@Model.Name" />
                </div>
            </div>

            <div class="form-group">
                <div class="form-group">
                    <label class="col-form-label">Reference URL</label>
                    <input type="text" class="form-control" name="ReferenceURL" value="@Model.ReferenceURL" />
                </div>
            </div>
            <div class="form-group mt-4 float-right">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <input id="btnSubTopicSave" type="submit" value="Save" class="btn btn-primary mr-3" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    
    <script type="text/javascript">
        $(document).ready(function() {
            $("#btnSubTopicSave").click(function() {
                var updatedSubTopicData = $("#subTopicForm").serialize();
                $.ajax({
                    type: "POST",
                    url: "/Shared/SubTopics/AddEditSubTopic",
                    data: updatedSubTopicData,
                    success: function() {
                        $("#subTopicModal").modal("hide");
                        window.location.replace("/Mentor/Home/ManageSubTopics")
                    },
                    error: function() {
                        alert("Unable to save data");
                    },
                });
            });
        });

        $(document).ready(function() {
            $("#StreamId").change(function() {
                $.ajax({
                    url: "/Shared/SubTopics/GetTopicList?streamId=" + $("#StreamId").val(),
                    type: "GET",
                    dataType: "json",
                    success: function(data) {
                        $("#TopicId").empty();
                        if (data) {
                            for (var i = 0; i < data.data.length; i++) {
                                $("#TopicId").append($("<option value='" + data.data[i].id + "'>" + data.data[i].name + "</option>"));
                            }
                        }
                    },
                    error: function(data) {
                        alert("Unable to load data");
                    },
                });
            });
        });
    </script>
  }
