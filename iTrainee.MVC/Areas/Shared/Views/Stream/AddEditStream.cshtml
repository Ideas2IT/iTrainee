@model iTrainee.Models.Stream

<div class="row">
	<div class="col-lg-12">
		<form id="streamForm">

			<div class="form-group">
				<label class="col-form-label">Name</label>
				<input type="text" class="form-control" name="Name" value="@Model.Name" />
			</div>
			<div class="form-group mt-4 float-right">
				<input id="btnStreamSave" type="submit" value="Save" class="btn btn-primary mr-3" />
			</div>
		</form>
	</div>
</div>


@section Scripts {
    @{
	await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}

<script>

		$(document).ready(function () {

		$("#btnStreamSave").click(function () {
			var updatedStreamData = $("#streamForm").serialize();
			$.ajax({
				type: "POST",
				url: "/Shared/Stream/AddEditStream",
				data: updatedStreamData,
				success: function () {
					$("#streamModal").modal("hide");
					window.location.replace("/Mentor/Home/ManageStreams")
				},
				error: function () {
					alert("Unable to save data");
				},
			});
		});
	});
</script>
