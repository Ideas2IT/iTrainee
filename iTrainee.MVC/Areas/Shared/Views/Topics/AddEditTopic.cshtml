@model iTrainee.Models.Topics
@using Microsoft.AspNetCore.Mvc.Rendering;

<div class="row">
	<div class="col-lg-12">
		<form id="topicForm">
			    @Html.AntiForgeryToken()
			<div class="form-group">
				<label class="col-form-label">Streams</label><br />
				@Html.DropDownListFor(model => model.StreamId, ViewBag.streamList as SelectList, "Select stream",  htmlAttributes: new { @class = "form-control"  })
			</div>
			<div class="form-group">
				<div class="form-group">
					<label class="col-form-label">Name</label>s
					<input type="text" class="form-control" name="Name" value="@Model.Name" />
				</div>
			</div>

			<div class="form-group">
				<div class="form-group">

					<label class="col-form-label">Reference URL</label>
					<input type="text" class="form-control" name="ReferenceURL" value="@Model.ReferenceURL" />
				</div>
			</div>
			<div class="form-group mt-4 float-right">
				<input id="btnTopicSave" type="submit" value="Save" class="btn btn-primary mr-3" />
			</div>
		</form>
	</div>
</div>


@section Scripts {
    @{
	await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}

<script>


		$(document).ready(function () {

		$("#btnTopicSave").click(function () {

			var updatedTopicData = $("#topicForm").serialize();
			$.ajax({
				type: "POST",
				url: "/Shared/Topics/AddEditTopic",
				data: updatedTopicData,
				success: function () {
					$("#topicModal").modal("hide");
					window.location.replace("/Mentor/Home/ManageTopics")
				},
				error: function () {
					alert("Unable to save data");
				},
			});
		});s
	});
</script>
