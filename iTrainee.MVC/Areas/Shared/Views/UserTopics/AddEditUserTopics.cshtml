@model iTrainee.Models.UserTopics;
@using Microsoft.AspNetCore.Mvc.Rendering;

@{
    ViewData["Title"] = "AssignTopics";
}

<style>
	.hidden{
		display: none;
	}

	.show{
		display:block;
	}

	.submit-button{
		width:5rem;
	}

	.submit-button:hover{
		cursor:pointer;
	}
</style>
<h3 class="mt-5 mb-4">Assign Topics</h3>

<div id="jstree">
</div>
 <label id="topicError" class="hidden text-danger">Please select atleast one sub topic</label>
<form id="batchForm" method="post">
	@Html.AntiForgeryToken()
    <div class="form-group">
        <label class="col-form-label">Select Trainees</label><br />
        @Html.ListBoxFor(model=>model.SelectedTrainees, new MultiSelectList(Model.TraineeList, "Id", "FirstName"),  htmlAttributes: new { id="multiSelectTrainee", @class = "form-control", multiple="multiple" })
        <label id="traineeError" class="hidden text-danger">Please select atleast one trainee</label>
    </div>

    <input type="hidden" name="selectedItems" id="selectedItems" required />
  	<input id="AssignTopicsSubmitBtn" type="button" class="mt-3 btn btn-primary submit-button" value="Save" />
</form>

@section scripts{
<script type="text/javascript">
     $(document).ready(function () {
          $("#multiSelectTrainee").chosen({
            placeholder_text_multiple: "Select minimum one trainee"
        });
     });
     $(document).ready(function () {
            var postedItems = [];
            var subTopicsCount = 0;
            $('#jstree').on('changed.jstree', function (e, data) {
                var i, j;
                subTopicsCount = data.selected.length;
                for(i = 0, j = data.selected.length; i < j; i++) {
                    //Fetch the Id.
                    var id = data.selected[i]; // 1-12
                    var parentId = 0;
                    //Remove the ParentId.
                    if(id.indexOf('-') != -1){
                        parentId = id.split("-")[0];
                        id = id.split("-")[1];

                    }
                    //Add the Node to the JSON Array.
                    postedItems.push({
                        text: data.instance.get_node(data.selected[i]).text,
                        id: id,
                        parent: parentId
                    });
                }
                //Serialize the JSON Array and save in HiddenField.
                $('#selectedItems').val(JSON.stringify(postedItems));
            }).jstree({
                "core": {
                    "themes": {
                        "variant": "large"
                    },
                    "data": @Html.Raw(ViewBag.Json)
                    },
                "checkbox": {
                    "keep_selected_style": false
                },
                "plugins": ["wholerow", "checkbox"],
            });

            $("#AssignTopicsSubmitBtn").click(function () {
                debugger;
                var traineeCount = $("#multiSelectTrainee option:selected").length;
                var selectedTopics = postedItems.length;
                var SelectedSubtopics = document.getElementById('selectedItems').value;

                if(traineeCount == 0) {
                    $('#traineeError').removeClass("hidden");
                    $('#traineeError').addClass("show");
                }

                if( subTopicsCount == 0) {
                    $('#topicError').removeClass("hidden");
                    $('#topicError').addClass("show");
                }

                if(traineeCount != 0 &&  subTopicsCount != 0) {
                    var a = $("#batchForm").serialize();
                    $.ajax({
                        type: "POST",
                        url: "/Shared/UserTopics/AddEditUserTopics",
                        data: a,
                        dataType: "json",
                        success: function (result) {
                            window.location.href =  "/Shared/UserTopics/ManageUserTopics"
                        },
                        error: function () {
                            alert("Unable to save/update data");
                        },
                   });
                }
            });
        });
</script>
}